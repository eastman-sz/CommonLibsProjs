<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.libs.module.pullfreshview.PullFreshViewActivity"
    android:orientation="vertical"
    android:background="@drawable/sfs_common_dialog_bg"
    >
    <com.common.base.CommonTitleView
        android:id="@+id/commontitle_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.handmark.pulltorefresh.library.PullToRefreshListView
        xmlns:ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/pull_fresh_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:background="@color/transparent"
        android:listSelector="@drawable/list_item_bg"
        android:cacheColorHint="@color/transparent"
        android:divider="@null"
        android:fadingEdge="none"
        ptr:ptrAnimationStyle="flip"
        ptr:ptrHeaderTextColor="@color/white"
        ptr:ptrMode="both"
        ptr:ptrloading_layout_bg_color="@color/transparent"
        />
</LinearLayout>
