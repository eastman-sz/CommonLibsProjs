<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.libs.module.ble.bracelet.BraceletActivity"
    android:orientation="vertical"
    >
    <com.common.base.CommonTitleView
        android:id="@+id/commontitle_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.common.base.CustomFontTextView
        android:id="@+id/dataTextView"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:textSize="@dimen/sfs_s6"
        android:textColor="@color/c12"
        android:padding="15dp"
        android:gravity="fill_horizontal"
        />

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:scrollbars="none"
        android:fadeScrollbars="true"
        android:overScrollMode="never"
        />

</LinearLayout>
