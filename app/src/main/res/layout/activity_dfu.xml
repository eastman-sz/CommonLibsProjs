<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.libs.module.ble.dfu.DFUActivity"
    android:orientation="vertical"
    >
    <com.common.base.CommonTitleView
        android:id="@+id/commontitle_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.common.base.CustomFontTextView
        android:id="@+id/devInfo_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:gravity="fill_horizontal"
        android:textSize="@dimen/sfs_s6"
        android:textColor="@color/c12"
        android:text="dddd"
        />

    <ImageView style="@style/full_line_style" />


    <com.common.base.CustomFontTextView
        android:id="@+id/prepareDfuBtnTextView"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:gravity="center"
        android:textColor="@color/c10"
        android:textSize="@dimen/sfs_s6"
        android:text="Prepare DFU"
        android:background="@color/c40"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        />

    <com.common.base.CustomFontTextView
        android:id="@+id/startDfuBtnTextView"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:gravity="center"
        android:textColor="@color/c10"
        android:textSize="@dimen/sfs_s6"
        android:text="Start DFU"
        android:background="@color/c40"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        />


    <com.ss.number.progress.bar.NumberProgressBar
        android:id="@+id/numberProgressbar"
        android:layout_height="wrap_content"
        android:padding="20dp"
        custom:progress_current="0"
        android:layout_width="match_parent"
        style="@style/NumberProgressBar_Passing_Green"
        />


</LinearLayout>
